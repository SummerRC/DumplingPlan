<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/soho_background_select_seasoning"
    android:id="@+id/rl_background_select_seasoning">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/bt_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/soho_select_seasoning_one"/>
        <ImageView
            android:id="@+id/bt_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/soho_select_seasoning_two"/>
        <ImageView
            android:id="@+id/bt_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/soho_select_seasoning_three"/>
        <ImageView
            android:id="@+id/bt_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/soho_select_seasoning_four"/>
        <ImageView
            android:id="@+id/bt_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/soho_select_seasoning_five"/>
    </LinearLayout>

</RelativeLayout>