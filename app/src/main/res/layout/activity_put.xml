<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewContainer" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="bottom|center_horizontal">

        <ImageView
            android:id="@+id/iv_pod"
            android:layout_marginTop="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/pot"/>

        <ImageView
            android:id="@+id/iv_water"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/water_put"/>

        <ImageView
            android:id="@+id/iv_dumplings"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="80dp"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/dumplings_pot"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_hint_click_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="40dp"
        android:layout_marginRight="100dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@mipmap/arrow_two"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/activity_put_hint_word_two"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_hint_slide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="120dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/arrow_two"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/activity_put_hint_word_one"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_switch"
        android:layout_marginBottom="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        android:layout_marginRight="60dp"
        android:background="@mipmap/rotation_button"/>

    <ImageView
        android:id="@+id/iv_cover_pad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@mipmap/cover_pad"/>

    <ImageView
        android:id="@+id/iv_dumpling_one"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/skin_five"/>

    <ImageView
        android:id="@+id/iv_dumpling_two"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/skin_five"/>

    <ImageView
        android:id="@+id/iv_dumpling_three"
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/skin_five"/>

    <ImageView
        android:id="@+id/iv_dumpling_four"
        android:layout_marginTop="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/skin_five"/>

    <ImageView
        android:id="@+id/iv_dumpling_five"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/skin_five"/>

    <ImageView
        android:id="@+id/iv_dumpling_six"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/skin_five"/>


    <include layout="@layout/view_common"/>
</FrameLayout>
