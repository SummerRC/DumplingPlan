<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewContainer" />

    <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_marginTop="20dp"
       android:background="@mipmap/panel"/>

    <ImageView
        android:id="@+id/iv_skin_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:background="@mipmap/little_skin_pie_three"/>

    <ImageView
        android:id="@+id/iv_skin_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="60dp"
        android:background="@mipmap/little_skin_pie_four"/>

    <ImageView
        android:id="@+id/iv_skin_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="120dp"
        android:background="@mipmap/little_skin_pie_five"/>

    <ImageView
        android:id="@+id/iv_skin_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="60dp"
        android:background="@mipmap/little_skin_pie_two"/>

    <ImageView
        android:id="@+id/iv_skin_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="120dp"
        android:background="@mipmap/little_skin_pie_one"/>

    <ImageView
        android:id="@+id/iv_dumpling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:visibility="visible"
        android:background="@anim/pack_dumpling"/>

    <LinearLayout
        android:id="@+id/ll_hint_pack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="60dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/arrow_up"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@mipmap/hint_pack"/>
    </LinearLayout>

    <include layout="@layout/view_common"/>
</FrameLayout>
