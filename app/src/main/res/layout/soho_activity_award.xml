<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none"
    tools:context="com.summerrc.dumplingplan.ui.activity.AwardActivity">

    <RelativeLayout
        android:layout_width="2238dp"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="2238dp"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:background="@mipmap/soho_award_background"/>

        <LinearLayout
            android:layout_width="2238dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_one"
                android:layout_width="503dp"
                android:layout_height="331dp"
                android:background="@mipmap/soho_award_chiku" />

            <ImageView
                android:id="@+id/iv_two"
                android:layout_width="503dp"
                android:layout_height="331dp"
                android:background="@mipmap/soho_award_chiku" />

            <ImageView
                android:id="@+id/iv_three"
                android:layout_width="503dp"
                android:layout_height="331dp"
                android:visibility="invisible"
                android:background="@mipmap/soho_award_chiku" />

            <ImageView
                android:id="@+id/iv_four"
                android:layout_width="503dp"
                android:layout_height="331dp"
                android:background="@mipmap/soho_award_chiku" />

            <ImageView
                android:id="@+id/iv_five"
                android:layout_width="503dp"
                android:layout_height="331dp"
                android:background="@mipmap/soho_award_chiku" />
        </LinearLayout>

    </RelativeLayout>

</HorizontalScrollView>
