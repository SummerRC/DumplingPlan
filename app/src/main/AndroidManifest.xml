<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.summerrc.dumplingplan" >

    <uses-permission android:name="android.permission.VIBRATE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.activity.WelcomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".ui.activity.SelectFoodActivity"
            android:label="@string/title_activity_select_food"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.SelectSeasoningActivity"
            android:label="@string/title_activity_select_seasoning"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".ui.activity.StuffingActivity"
            android:label="@string/title_activity_select_seasoning"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".ui.activity.DoughActivity"
            android:label="@string/title_activity_select_seasoning"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".ui.activity.RubActivity"
            android:label="@string/title_activity_select_seasoning"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".ui.activity.CutActivity"
            android:label="@string/title_activity_select_seasoning"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".ui.activity.SkinActivity"
            android:label="@string/title_activity_select_seasoning"
            android:screenOrientation="landscape" >

        </activity>
        <activity
            android:name=".ui.activity.PackActivity"
            android:label="@string/title_activity_select_seasoning"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".ui.activity.PutActivity"
            android:label="@string/title_activity_select_seasoning"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".ui.activity.ShakeActivity"
            android:label="@string/title_activity_select_seasoning"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".ui.activity.FoodDescriptionActivity"
            android:label="@string/title_activity_select_seasoning"
            android:screenOrientation="landscape"
            android:theme="@style/DialogActivity" >
        </activity>
        <activity
            android:name=".ui.activity.BasketActivity"
            android:label="@string/title_activity_basket"
            android:theme="@style/DialogActivity">
        </activity>
    </application>

</manifest>
